@page "/login"
@layout AuthLayout

<form @submit.prevent="onsubmit">
    <VaInput
      @bind="@Email"
      Type="InputType.Email"
      Label="Email"
      IsError="@(EmailErrors.Any())"
      ErrorMessages="@EmailErrors" />

    <VaInput
      @bind="@Password"
      Type="InputType.Password"
      Label="Mot de passe"
      IsError="@(PasswordErrors.Any())"
      ErrorMessages="@PasswordErrors" />

    <div class="auth-layout__options d-flex align--center justify--space-between">
        <VaCheckBox @bind="@KeepLoggedIn" class="mb-0" Label="Se souvenir de moi"/>
        <NavLink class="ml-1 link" href="/recover-password">Mot de passe oubli√© ? Retrouver</NavLink>
    </div>

    <div class="d-flex justify--center mt-3">
        <VaButton type="submit" class="my-0">Se connecter</VaButton>
    </div>
</form>

@code
{
    private string Email { get; set; }
    private string Password { get; set; }
    private bool KeepLoggedIn { get; set; }
    private IEnumerable<string> EmailErrors { get; set; }
    private IEnumerable<string> PasswordErrors { get; set; }
}