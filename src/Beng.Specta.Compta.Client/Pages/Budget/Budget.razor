@page "/budget"
@using Beng.Specta.Compta.Core.DTOs
@inject ILogger<Budget> Logger
@inject HttpClient HttpClient

<GenericPage Title="Budget"
             Loader="@LoadItems"
             Icon="vuestic-iconset vuestic-iconset-forms"
             NewText="Initier un Budget">
    <Loading>
        <h1>Loading...</h1>
    </Loading>
    <Empty>
        Vous n'avez pas encore de Budget associé à votre projet en cours.
    </Empty>
    <Item Context="item">
        <div class="col">
            <h5>@item.Name</h5>
            Code:
            <strong>@item.Code</strong>;
            Date de début:
            <strong>£@item.StartDate</strong>
        </div>
        <div class="col">
            Durée: <strong>@item.Duration</strong>
        </div>
    </Item>
</GenericPage>

@code{
    
    protected async Task<IList<ProjectDTO>> LoadItems()
    {
        //await Task.Delay(3000);
        
        return await Task.Run(() => new List<ProjectDTO>());//GetProjects();
    }
}