@page "/settings-roles"
@using Beng.Specta.Compta.Core.DTOs
@inject ILogger<RoleSettings> Logger
@inject HttpClient HttpClient

<GenericPage Title="Rôles ou Groupe de collaborateurs"
             Loader="@LoadItems"
             Icon="vuestic-iconset vuestic-iconset vuestic-iconset-settings"
             NewText="Ajouter un rôle">
    <Loading>
        <h1>Loading...</h1>
    </Loading>
    <Empty>
        Vous n'avez pas encore créer un groupe de collaborateur.
    </Empty>
    <Item Context="item">
        <div class="col">
            <h5>@item.Name</h5>
            Code:
            <strong>@item.Code</strong>;
            Date de début:
            <strong>£@item.StartDate</strong>
        </div>
        <div class="col">
            Durée: <strong>@item.Duration</strong>
        </div>
    </Item>
</GenericPage>

@code{
    
    protected async Task<IList<ProjectDTO>> LoadItems()
    {
        //await Task.Delay(3000);
        
        return await Task.Run(() => new List<ProjectDTO>());//GetProjects();
    }
}